<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
    </style>

    <!-- Progress Bar -->
    <style name="CustomProgressBarHorizontal" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/my_progress</item>
        <item name="android:minHeight">7dip</item>
        <item name="android:maxHeight">10dip</item>
    </style>

    <!-- Row Text -->
    <style name="RowTitle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24sp</item>
    </style>

    <!-- Row Play Button -->
    <style name="RowPlayButton" parent="android:Widget.Button">
        <item name="android:background">@drawable/row_play_but_selector</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>

    </style>


</resources>
