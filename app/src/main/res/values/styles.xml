<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
    </style>

    <!-- Progress Bar -->
    <style name="CustomProgressBarHorizontal" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/my_progress</item>
        <item name="android:minHeight">7dip</item>
        <item name="android:maxHeight">10dip</item>
    </style>

    <!-- Row Text -->
    <style name="RowTitle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24sp</item>
    </style>

    <!-- Row Play Button -->
    <style name="RowPlayButton" parent="android:Widget.Holo.Button.Borderless">
        <item name="android:background">@drawable/row_play_but_selector</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>

    </style>

    <style name="MainPlayBut">
        <item name="android:background">@drawable/main_play_but</item>
        <item name="android:fontFamily">sans-serif-thin</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="TitleText">
        <item name="android:textColor" >@color/main_black</item>
        <item name="android:textSize">@dimen/title_text_size</item>

    </style>



</resources>
